<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Manager"/>
    <role name="UWOBulletin.Director"/>
    <role name="UWOBulletin.Staff"/>
  </roles>
  <permissions>
    <permission name="UWOBulletin: Add Bulletin"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
    </permission>

    <permission name="UWOBulletin: Add Department"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>

    <permission name="UWOBulletin: Add Course"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>

    <permission name="UWOBulletin: Add Faculty"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>

    <permission name="UWOBulletin: Add Faculty_Listing"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>

    <permission name="UWOBulletin: Add Program"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>
    <permission name="UWOBulletin: Add InfoPage"
                acquire="True">
      <role name="Manager"/>
      <role name="UWOBulletin.Director"/>
      <role name="UWOBulletin.Staff"/>
    </permission>
   
  </permissions>
</rolemap>
